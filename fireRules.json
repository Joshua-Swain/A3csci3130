{
  "rules": {
    ".read": "true",
    ".write": "true",
    "contacts": {
      "$contact": {
        "name": {
          ".validate": "newData.isString() &&
                        (1 < newData.val().length) && (newData.val().length < 49) &&
                        newData.matches(/^[A-Z ]*$/i)"
        },
        "email": {
          ".validate": "newData.isString() && newData.val().matches(/^[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,4}$/i)"
        },
        "number": "newData.isString() && newData.val().matches([0-9]{9})"
        },
        "address": {
          ".validate": "newData.isString() && newData.val().length < 50"
        },
        "business": {
          ".validate": "newData.val().matches(/(Fisher|Distributor|Processor|Fish[ ]Monger)/)"
        },
        "pt": {
          ".validate": "newData.isString() && (newData.val().matches(/(AB|BC|MB|NB|NS|NT|NU|ON|PE|QC|SK|YK|[ ])/)"
        }
      }
    }